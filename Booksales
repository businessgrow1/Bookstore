  <script>
    const bookRedirects = {
      '1': 'https://sela.co/6uii8',  // 4 Ways To Get Her
      '2': 'https://sela.co/yuuhh',  // How To Increase Your Sex Life
      '3': 'https://sela.co/ihyu7'   // Secrets Women Want You To Know
    };

    const urlParams = new URLSearchParams(window.location.search);
    const bookId = urlParams.get('book');

    if (bookId && bookRedirects[bookId]) {
      setTimeout(() => {
        window.location.replace(bookRedirects[bookId]);
      }, 200);
    }
